# GSP Finance Frontend Environment Variables
# ==========================================

# API Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_ENVIRONMENT=development

# Production API URL (uncomment for production)
# REACT_APP_API_URL=https://gspfinanceback.onrender.com

# Feature Flags
REACT_APP_ENABLE_VECTOR_DETECTION=true
REACT_APP_ENABLE_ADVANCED_CHARTS=true
REACT_APP_ENABLE_DATA_EXPORT=true

# Chat Configuration
REACT_APP_CHAT_TIMEOUT=30000
REACT_APP_MAX_MESSAGE_LENGTH=2000

# Theme Configuration
REACT_APP_DEFAULT_THEME=light
REACT_APP_BRAND_COLOR=#2196F3

# Debug Settings (development only)
REACT_APP_DEBUG_MODE=true
REACT_APP_LOG_LEVEL=info
